<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Recipes name Text styles - Main -->
    <style name="recipes_names">
        <item name="android:textColor">#212121</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="recipes_names_sw600dp">
        <item name="android:textColor">#212121</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="recipes_names_sw600dp_land">
        <item name="android:textColor">#212121</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textSize">38sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- Recipes servings Text styles - Main -->
    <style name="recipes_servings">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="recipes_servings_sw600dp">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="recipes_servings_sw600dp_land">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Recipe ingredients & description Text styles - Steps - Details -->
    <style name="recipe_text">
        <item name="android:textColor">#E0E0E0</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="recipe_text_tablet">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
